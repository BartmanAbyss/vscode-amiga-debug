{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"outDir": "out",
		"lib": [
			"es6",
			"dom"
		],
		//"esModuleInterop": true, // only enabled because of new versions of react-split, markdown-to-jsx required it, but breaks test/suite/index.ts
		"sourceMap": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"moduleResolution": "node",
		"rootDir": "src",
		"strict": false, /* enable all strict type-checking options */
		"strictBindCallApply": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true, // for rc-dock, see https://stackoverflow.com/a/73021533
		/* Additional Checks */
		// "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
		// "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statement. */
		// "noUnusedParameters": true,  /* Report errors on unused parameters. */
        "baseUrl": ".",		
        "paths": {
            "react": ["node_modules/preact/compat/"],
            "react-dom": ["node_modules/preact/compat/"]
        }
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
